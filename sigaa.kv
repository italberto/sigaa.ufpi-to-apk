<Gerenciador>:
    DoLogin:
            

<DoLogin>:
    usuario_input: usuario
    senha_input: senha
    
    BoxLayout:
        orientation: "vertical"
         
        canvas:
            Color:
                rgb: 127,255,212
            Rectangle:
                size: self.size
        
        Label:
            text:"SIGAA.UFPI-APP"
            color: (18,163,241, 1)
            bold: True
            font_size: "40sp"
        
        Label:
            text: "Usuário"
            color: (255,0,0,1)
            
                       
        TextInput:
            multiline: False
            size_hint_y: .5
            id: usuario
        
        Label:
            text: "Senha"
            color: (255,0,0,1)
        
        TextInput:
            password: True
            multiline: False
            size_hint_y: .5
            id: senha
            
        
        AnchorLayout:
            Button:
                size_hint_x: .5
                size_hint_y: .5
                text: "Logar-se"
                on_release: root.logar_se()

<PopErrorConection>:
    size_hint_y: None
    height: "100dp"
    width: "50dp"
    title: "Não foi possivel fazer login, verifique a sua internet ou a disponibilidade do SIGAA."
    
    AnchorLayout:
        Button:
            size_hint_x: .5
            size_hint_y: 1
            text: 'OK, Entendi'
            on_release: root.dismiss()

<PopSenhaErrada>:
    size_hint_y: None
    height: "100dp"
    width: "50dp"
    title: "Usuário ou Senhas errados."
    
    AnchorLayout:
        Button:
            size_hint_x: .5
            size_hint_y: 1
            text: 'OK, Entendi'
            on_release: root.dismiss()
