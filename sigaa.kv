    usuario_input: usuario
    senha_input: senha
    
    BoxLayout:
        orientation: "vertical"
         
        canvas:
            Color:
                rgb: 127,255,212
            Rectangle:
                size: self.size
        
        Label:
            text:"SIGAA.UFPI-APP"
            color: (18,163,241, 1)
            bold: True
            font_size: "40sp"
        
        Label:
            text: "Usu√°rio"
            color: (255,0,0,1)
            
                       
        TextInput:
            multiline: False
            size_hint_y: .5
            id: usuario
        
        Label:
            text: "Senha"
            color: (255,0,0,1)
        
        TextInput:
            password: True
